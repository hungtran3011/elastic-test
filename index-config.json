{
  "settings": {
    "index": {
      "max_ngram_diff": 15
    },
    "analysis": {
      "filter": {
        "vietnamese_ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 15
        },
        "icu_folding": {
          "type": "icu_folding"
        }
      },
      "tokenizer": {
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 15,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "analyzer": {
        "vietnamese_text": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "lowercase",
            "icu_folding"
          ]
        },
        "vietnamese_text_with_diacritics": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "lowercase" 
          ]
        },
        "vietnamese_autocomplete": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "lowercase",
            "icu_folding",
            "vietnamese_ngram"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "analyzer": "vietnamese_text",
        "search_analyzer": "vietnamese_text",
        "fields": {
          "with_diacritics": {
            "type": "text",
            "analyzer": "vietnamese_text_with_diacritics",
            "search_analyzer": "vietnamese_text_with_diacritics"
          },
          "autocomplete": {
            "type": "text",
            "analyzer": "vietnamese_autocomplete",
            "search_analyzer": "vietnamese_text"
          }
        }
      },
      "content": {
        "type": "text",
        "analyzer": "vietnamese_text",
        "search_analyzer": "vietnamese_text",
        "fields": {
          "with_diacritics": {
            "type": "text",
            "analyzer": "vietnamese_text_with_diacritics",
            "search_analyzer": "vietnamese_text_with_diacritics"
          }
        }
      },
      "popularity": {
        "type": "integer"
      },
      "last_updated": {
        "type": "date"
      }
    }
  }
}